@model List<Pizza>

<div class="container">
  <div class="row">
      <div class="col-12">
          <h2 class="text-center">Le nostre pizze</h2>
      </div>
  </div>
  <div class="row">
        @if(Model.Count() == 0)
        {
            <h3>Non sono presenti pizze</h3>
        }
        @foreach(Pizza pizza in Model)
        {
            <div class="col mb-4">
              <div class="card mx-auto h-100" style="width: 18rem;">
                <img src="@pizza.image" class="card-img-top" alt="Immagine Pizza" height="100%">
                <div class="card-body">
                  <h5 class="card-title fw-bold d-inline-block">@pizza.Name</h5>
                  <p class="float-end fst-italic">@pizza.prezzo €</p>
                  <p class="card-text"><span>@pizza.Description</span></p>
                  <div class="card-footer text-center">
                    <a class="btn btn-success text-center" href="@Url.Action("DettaglioPizza", "Pizza", new { id = pizza.Id })">Vedi Dettagli Pizza</a>
                  </div>
                </div>
              </div>
              </div>
        }
    

    </div>
</div>
